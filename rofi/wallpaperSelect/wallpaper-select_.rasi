listview {
    enabled:                     true;
    spacing:                     4em;
    padding:                     4em;
    columns:                     10;
    lines:                       1;
    dynamic:                     false;
    fixed-height:                false;
    fixed-columns:               true;
    reverse:                     true;
    cursor:                      "default";
    background-color:            transparent;
    text-color:                  @main-fg;
}

element {
	enabled:					true;
	orientation:				vertical;
	expand:						false;
	cursor:						pointer;
	border-radius:				20px;
	padding:					5px 10px;
	
	background-color:			transparent;
}

element-icon {
	size:						30%;
	cursor:						inherit;
	expand:						false;
	padding:					0px;

	background-color:			inherit;
}

element-text {
	vertical-align:				0.5;
	horizontal-align:			0.5;
	cursor:						inherit;
	background-color:			inherit;
	text-color:					@background-color;
}

element normal.normal {
	background-color:			inherit;
	text-color:					inherit;
}

element selected.normal {
	text-color:					@selected-normal-background;
}

element alternate.normal {
	background-color:			inherit;
	text-color:					inherit;
}

