/* config - Wallpaper select */

/* ---- Configuration ---- */
configuration {
    modi:                        "drun";
    font:                        "JetBrains Mono Nerd Font 10";
    show-icons:                  true;
	drun-display-format:         "{name}";
	display-drun:				 "Wallpapers ";
    hover-select:                true;
    me-select-entry:             "MouseSecondary";
    me-accept-entry:             "MousePrimary";
    window-format:               "{w} · {c} · {t}";
	dpi:						 1;
}

/* ---- Load pywal colors ---- */
@theme "~/.cache/wal/colors-rofi-light.rasi"

/* ---- Global Properties ---- */
* {

    background-alt:              @selected-active-background; // Buttons background
    selected:                    @selected-normal-background; // Button selected
    active:                      @selected-urgent-background; // Window activated
    urgent:                      @selected-normal-background; // When hovering the activated window (maybe more?)

    text-selected:               @background;
    text-color:                  @foreground;
    border-color:                @selected;

}

window {
	enabled:					true;
	fullscreen:					false;
	transparency:				"real";
	cursor:						"cursor";
	spacing:					0px;
	border:						2px;
	border-radius:				10px;
	location:					center;
	anchor:						center;

	width:						75%;
	background-color:			#00000088;
}

mainbox {
	enabled:					true;
	children:					[ "inputbar", "listview" ];
	background-color:			transparent;
}

inputbar {
	enabled:					true;
	children:					[ "entry" ];
	background-color:			transparent;
}

entry {
	enabled:					true;
	background-color:			transparent;
	text-color:					@background-color;
}

