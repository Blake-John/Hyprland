/* ---- Window ---- */
window {
    // Default
    enabled:                     true;
    fullscreen:                  false;
    transparency:                "real";
    cursor:                      "default";
    spacing:                     0px;
    border:                      2px;
    border-radius:               10px;
    location:                    center;
    anchor:                      center;

    // Style Values
    width:                       75%;
    background-color:            #ffffff88;
	background-color:			inherit;
}

/* ---- Mainbox ---- */
mainbox {
    enabled:                     true;
    children:                    [ "inputbar", "listview" ];
    background-color:            transparent;
}

/* ---- Inputbar ---- */
inputbar {
	enabled:					true;
	padding:					10px 20px;
	margin:						10px;
	background-radius:			transparent;
}

prompt {
	enabled:					false;
	str:						"Wallpaper ";
}

entry {
	padding:					10px;
	background-color:			#00000011;
	border-radius:				10px;
}


/* ---- List ---- */
listview {
    enabled:                     true;
    columns:                     4;
    lines:                       2;
    padding:                     26px 36px;
    cycle:                       true;
    dynamic:                     true;
    scrollbar:                   false;
    layout:                      vertical;
    reverse:                     false;
    fixed-height:                true;
    fixed-columns:               true;

    background-color:            transparent;
    spacing:                     20px;
    
    //  Adapt rofi theme
    border:                      10px;

}

/* ---- Elements ---- */
element {
    enabled:                     true;
    orientation:                 vertical;
    expand:                      false;
    spacing:                     0px;
    padding:                     5px 10px;
    border-radius:               26px;
    cursor:                      pointer;
    background-color:            transparent;
}


element normal.normal {
    background-color:            transparent;
    text-color:                  inherit;
}
